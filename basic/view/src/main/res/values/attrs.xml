<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BaseStatusView">
        <attr name="image_src" format="reference"/>

        <attr name="title_str" format="string"/>
        <attr name="title_color" format="color"/>
        <attr name="title_size" format="dimension"/>

        <attr name="content_str" format="string"/>
        <attr name="content_color" format="color"/>
        <attr name="content_size" format="dimension"/>

        <attr name="btn_text" format="string"/>
        <attr name="btn_shape" format="reference"/>
        <attr name="btn_text_size" format="dimension"/>
        <attr name="btn_text_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="SwipeRefreshLayout">
        <attr name="enabled" format="boolean" />
        <attr name="fresh_type" format="integer">
            <enum name="fresh_default" value="0"/>
        </attr>
    </declare-styleable>
</resources>
