<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <com.base.compat.view.StatusBarView
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.base.compat.view.ActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_actionbar_height" />


    <ImageView
        android:id="@+id/viewTest"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="13dp"
        android:background="@drawable/rect_gradient_ffa240_ff8c49_r4"
        android:src="@mipmap/yinsuwan"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>


    <com.view.cardView.cardViewNew.CardViewNew
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="80dp"
            android:background="@drawable/rect_gradient_ffa240_ff8c49_r4"
            android:layout_height="80dp"/>
    </com.view.cardView.cardViewNew.CardViewNew>
    <com.view.refresh.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.view.loadmore.LoadMoreRecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.view.refresh.SwipeRefreshLayout>


</LinearLayout>