<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".car.CarActivity">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#a1b203"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="change" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/ngt_1"
            android:transitionName="@string/transition_home" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior=".car.behavior.HomeBottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content1"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/color_a1abbc"
                android:gravity="center"
                android:text="1"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="2"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="@color/color_a1abbc"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/content3"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/color_a1abbc"
                android:gravity="center"
                android:text="3"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/content4"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:background="@color/color_a1abbc"
                android:gravity="center"
                android:text="4"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_height="200dp" />

            <TextView
                android:id="@+id/content5"
                android:background="@color/color_a1abbc"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="5"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>