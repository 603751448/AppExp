<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <com.view.compat.StatusBarView
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.view.compat.ActionBarView
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_actionbar_height" />


    <FrameLayout
        android:id="@+id/carView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/car"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="30dp"
            android:elevation="2dp"
            android:src="@mipmap/ngt_15"
            android:transitionName="@string/transition_home" />


        <com.lzp.copyui.transition.gallery.GalleryRecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="300dp" />


    </FrameLayout>

    <com.lzp.copyui.transition.gallery.IndicatorView
        android:id="@+id/indicatorView"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="15dp"/>
</LinearLayout>